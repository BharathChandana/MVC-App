@using WebApplicationExample15.Models
@model List<Product>
@{
    ViewBag.Title = "ListProducts";
}

<h2>List of Products</h2>
<table>
    <tr>
        <th>ProductId</th>
        <th>Name</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>
    @{ 
        foreach(Product p in Model)
        {
            <tr>
                <td>@p.ProductId</td>
                <td>@p.ProductName</td>
                <td>@p.Quantity</td>
                <td>@p.Price</td>
            </tr>
        }
    }
</table>
@Html.ActionLink("To add more products","EnterNewProduct")


